{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2018",
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": false,
    "allowJs": false,
    "moduleResolution": "node",
    "strict": true,
    "declaration": false,
    "downlevelIteration": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": [
    "**/*.test.ts",
    "**/test.config.ts",
    "node_modules",
    "**/build/*",
    "**/*.d.ts"
  ]
}